{
  "name": "server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "implicitDependencies": ["prisma-db", "code-gen-types", "git-utils", "kafka"],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/server"],
      "options": {
        "jestConfig": "apps/server/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "test:e2e": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/server"],
      "options": {
        "jestConfig": "apps/server/jest.config.e2e.ts",
        "passWithNoTests": true,
        "runInBand": true
      }
    },
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "dependsOn": ["graphql:schema:generate", "graphql:schema:check"],
      "options": {
        "webpackConfig": "apps/server/webpack.config.js",
        "outputPath": "dist/apps/server",
        "main": "apps/server/src/main.ts",
        "tsConfig": "apps/server/tsconfig.app.json",
        "assets": [
          {
            "glob": "prisma",
            "input": "libs/prisma-db",
            "output": "prisma"
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "server:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "server:build:production"
        }
      }
    },
    "db:migrate:deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma migrate deploy",
        "cwd": "libs/prisma-db",
        "envFile": "apps/server/.env"
      }
    },
    "graphql:schema:generate": {
      "executor": "nx:run-commands",
      "inputs": ["{projectRoot}/src/**/*.ts"],
      "dependsOn": ["^db:prisma:generate"],
      "outputs": ["apps/server/src/schema.graphql"],
      "options": {
        "command": "ts-node -P tsconfig.app.json -r tsconfig-paths/register scripts/generate-graphql-schema.ts",
        "cwd": "apps/server"
      }
    },
    "graphql:schema:check": {
      "executor": "nx:run-commands",
      "inputs": ["{projectRoot}/src/schema.graphql"],
      "dependsOn": ["graphql:schema:generate"],
      "options": {
        "command": "ts-node -P tsconfig.app.json -r tsconfig-paths/register scripts/check-graphql-schema",
        "cwd": "apps/server"
      }
    },
    "docker:build": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": false,
        "tags": ["amplication/server:latest"]
      }
    }
  },
  "tags": []
}
